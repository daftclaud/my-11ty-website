---
title: Word Curation Insights
layout: base.njk
---

{% set stats = collections.word_curation | getWordStats %}

<div class="insights-content">
  <h2>Collection Overview</h2>
  
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-number">{{ stats.totalWords }}</div>
      <div class="stat-label">Total Words Collected</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number">{{ stats.distinctWords }}</div>
      <div class="stat-label">Distinct Words</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number">{{ stats.totalCurations }}</div>
      <div class="stat-label">Curation Sessions</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number">{{ stats.averageWordsPerCuration | round(1) }}</div>
      <div class="stat-label">Avg Words Per Session</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number">{{ stats.daysCollecting }}</div>
      <div class="stat-label">Days Collecting</div>
    </div>
  </div>

  <h2>Collection Timeline</h2>
  <div class="timeline-chart">
    <div class="chart-container">
      {% for year in stats.yearlyBreakdown %}
      <div class="year-bar">
        <div class="bar-label">{{ year.year }}</div>
        <div class="bar-wrapper">
          <div class="bar-fill" data-width="{{ (year.count / stats.maxYearlyCount * 100) }}">
            <span class="bar-count">{{ year.count }} words</span>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>

  <h2>Most Active Months</h2>
  <div class="monthly-activity">
    <table class="activity-table">
      <thead>
        <tr>
          <th>Month</th>
          <th>Words Collected</th>
          <th>Sessions</th>
        </tr>
      </thead>
      <tbody>
        {% for month in stats.topMonths %}
        <tr>
          <td>{{ month.monthName }}</td>
          <td>{{ month.wordCount }}</td>
          <td>{{ month.sessionCount }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <h2>Top Sources</h2>
  <div class="sources-grid">
    {% for source in stats.topSources %}
    <div class="source-card">
      <div class="source-name">{{ source.name }}</div>
      <div class="source-count">{{ source.count }} words</div>
    </div>
    {% endfor %}
  </div>

  <h2>Most Repeated Words</h2>
  <div class="repeated-words">
    {% if stats.repeatedWords.length > 0 %}
    <table class="repeated-table">
      <thead>
        <tr>
          <th>Word</th>
          <th>Times Collected</th>
          <th>Definition</th>
        </tr>
      </thead>
      <tbody>
        {% for item in stats.repeatedWords %}
        <tr>
          <td class="word-column">{{ item.word }}</td>
          <td class="count-column">{{ item.count }}</td>
          <td class="definition-column">{{ item.definition or 'N/A' }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    {% else %}
    <p>No repeated words yet!</p>
    {% endif %}
  </div>

  <h2>Words by First Letter</h2>
  <div class="alphabet-chart">
    {% for letter in stats.letterDistribution %}
    <div class="letter-bar">
      <div class="letter-label">{{ letter.letter }}</div>
      <div class="letter-bar-wrapper">
        <div class="letter-bar-fill" data-height="{{ (letter.count / stats.maxLetterCount * 100) }}">
          <span class="letter-count">{{ letter.count }}</span>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

  <h2>Collection Milestones</h2>
  <div class="milestones">
    <ul class="milestone-list">
      <li class="milestone-item">
        <span class="milestone-icon">üéØ</span>
        <div class="milestone-text">
          <strong>First Word:</strong> {{ stats.firstWord.word }} on {{ stats.firstWord.date | formatDate }}
        </div>
      </li>
      <li class="milestone-item">
        <span class="milestone-icon">üèÜ</span>
        <div class="milestone-text">
          <strong>Latest Word:</strong> {{ stats.latestWord.word }} on {{ stats.latestWord.date | formatDate }}
        </div>
      </li>
      <li class="milestone-item">
        <span class="milestone-icon">üî•</span>
        <div class="milestone-text">
          <strong>Current Streak:</strong> {{ stats.currentStreak }} days in the last 30 days
        </div>
      </li>
    </ul>
  </div>

  <h2>Random Word Discovery</h2>
  <div class="random-word-section">
    {% set randomWord = stats.randomWord %}
    <div class="word-spotlight">
      <h3 class="spotlight-word">{{ randomWord.word }}</h3>
      <p class="spotlight-definition">{{ randomWord.definition }}</p>
      {% if randomWord.source %}
      <p class="spotlight-source">Source: {{ randomWord.source }}</p>
      {% endif %}
      <p class="spotlight-date">Collected on {{ randomWord.date | formatDate }}</p>
    </div>
    <p class="refresh-note">Refresh the page to discover another word!</p>
  </div>
</div>

<style>
  .insights-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 30px 0;
  }

  .stat-card {
    background: #fff;
    border: 3px solid #ff00ff;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    box-shadow: 4px 4px 0 #000;
  }

  .stat-number {
    font-size: 3em;
    font-weight: bold;
    color: #ff4500;
    text-shadow: 2px 2px #000;
  }

  .stat-label {
    margin-top: 10px;
    font-size: 1em;
    color: #333;
  }

  .timeline-chart, .monthly-activity, .sources-grid, .alphabet-chart, .milestones, .random-word-section {
    margin: 30px 0;
  }

  .chart-container {
    background: #fff;
    border: 3px solid #ff00ff;
    padding: 20px;
    border-radius: 10px;
  }

  .year-bar {
    display: flex;
    align-items: center;
    margin: 15px 0;
  }

  .bar-label {
    width: 60px;
    font-weight: bold;
    color: #ff4500;
  }

  .bar-wrapper {
    flex: 1;
    background: #e0e0e0;
    height: 30px;
    border-radius: 5px;
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #ff00ff, #00ffff);
    display: flex;
    align-items: center;
    padding: 0 10px;
    min-width: 80px;
    transition: width 0.3s ease;
  }

  .bar-count {
    font-size: 0.9em;
    font-weight: bold;
    color: #000;
  }

  .activity-table {
    width: 100%;
    background: #fff;
    border: 3px solid #ff00ff;
    border-collapse: collapse;
    border-radius: 10px;
    overflow: hidden;
  }

  .activity-table th {
    background: #00ffff;
    padding: 15px;
    text-align: left;
    border-bottom: 3px solid #ff00ff;
  }

  .activity-table td {
    padding: 12px 15px;
    border-bottom: 1px solid #ddd;
  }

  .activity-table tbody tr:hover {
    background: #fffacd;
  }

  .repeated-words {
    margin: 30px 0;
  }

  .repeated-table {
    width: 100%;
    background: #fff;
    border: 3px solid #ff00ff;
    border-collapse: collapse;
    border-radius: 10px;
    overflow: hidden;
  }

  .repeated-table th {
    background: #00ffff;
    padding: 15px;
    text-align: left;
    border-bottom: 3px solid #ff00ff;
  }

  .repeated-table td {
    padding: 12px 15px;
    border-bottom: 1px solid #ddd;
  }

  .repeated-table .word-column {
    font-weight: bold;
    color: #ff4500;
    min-width: 120px;
  }

  .repeated-table .count-column {
    text-align: center;
    width: 100px;
    background: #fff9e6;
    font-weight: bold;
  }

  .repeated-table .definition-column {
    font-size: 0.95em;
    color: #555;
  }

  .repeated-table tbody tr:hover {
    background: #fffacd;
  }

  .sources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
  }

  .source-card {
    background: #fff;
    border: 2px solid #ff00ff;
    padding: 15px;
    border-radius: 8px;
    transition: transform 0.2s;
  }

  .source-card:hover {
    transform: translateY(-5px);
    box-shadow: 4px 4px 0 #000;
  }

  .source-name {
    font-weight: bold;
    color: #ff4500;
    margin-bottom: 5px;
  }

  .source-count {
    color: #666;
  }

  .alphabet-chart {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    background: #fff;
    border: 3px solid #ff00ff;
    padding: 20px;
    border-radius: 10px;
    height: 250px;
    overflow-x: auto;
  }

  .letter-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    min-width: 30px;
  }

  .letter-bar-wrapper {
    width: 100%;
    height: 150px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .letter-bar-fill {
    width: 80%;
    background: linear-gradient(180deg, #ff00ff, #00ffff);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding: 5px 0;
    border-radius: 5px 5px 0 0;
    transition: height 0.3s ease;
  }

  .letter-count {
    font-size: 0.7em;
    font-weight: bold;
    color: #000;
  }

  .letter-label {
    margin-top: 10px;
    font-weight: bold;
    color: #ff4500;
    font-size: 1.1em;
  }

  .milestone-list {
    list-style: none;
    padding: 0;
    background: #fff;
    border: 3px solid #ff00ff;
    border-radius: 10px;
    padding: 20px;
  }

  .milestone-item {
    display: flex;
    align-items: flex-start;
    padding: 15px;
    margin: 10px 0;
    background: #fffacd;
    border-radius: 8px;
  }

  .milestone-icon {
    font-size: 2em;
    margin-right: 15px;
  }

  .milestone-text {
    flex: 1;
  }

  .milestone-text strong {
    color: #ff4500;
  }

  .random-word-section {
    background: #fff;
    border: 3px solid #ff00ff;
    border-radius: 10px;
    padding: 30px;
    text-align: center;
  }

  .word-spotlight {
    background: linear-gradient(135deg, #fffacd, #00ffff);
    padding: 30px;
    border-radius: 10px;
    margin-bottom: 20px;
  }

  .spotlight-word {
    font-size: 2.5em;
    color: #ff4500;
    text-shadow: 2px 2px #000;
    margin-bottom: 15px;
  }

  .spotlight-definition {
    font-size: 1.2em;
    margin: 15px 0;
    line-height: 1.6;
  }

  .spotlight-source, .spotlight-date {
    color: #666;
    font-style: italic;
    margin: 10px 0;
  }

  .refresh-note {
    color: #666;
    font-size: 0.9em;
  }

  h2 {
    color: #ff4500;
    text-shadow: 1px 1px #000;
    margin-top: 40px;
    margin-bottom: 20px;
    border-bottom: 3px dashed #ff00ff;
    padding-bottom: 10px;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
    
    .alphabet-chart {
      overflow-x: scroll;
    }
    
    .year-bar {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .bar-label {
      margin-bottom: 5px;
    }
  }
</style>

<script>
  // Apply dynamic widths and heights from data attributes
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.bar-fill[data-width]').forEach(function(el) {
      el.style.width = el.getAttribute('data-width') + '%';
    });
    
    document.querySelectorAll('.letter-bar-fill[data-height]').forEach(function(el) {
      el.style.height = el.getAttribute('data-height') + '%';
    });
  });
</script>

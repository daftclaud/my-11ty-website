---
layout: base.njk
eleventyComputed:
  title: "{{ title }}"
---

<article>
  <header>
    <h1>{{ title }}</h1>
  </header>
  <p>
    {{ description }}
  </p>
  <figure>
    <img src="{{ image }}" alt="{{ title }}" loading="lazy" decoding="async" />
    <figcaption class="center-text">{{ caption }}</figcaption>
  </figure>

  {{ content | safe }}
</article>

<style>
  header {
    background-color: var(--clr-nav-bg);
    color: var(--clr-nav-text);
    padding: 10px 0;
    text-align: center;
  }

  h1 {
    margin: 0;
    font-size: 2.25rem;
  }

  main {
    max-width: 900px;
    margin: 20px auto;
    padding: 20px;
    background-color: var(--clr-main-bg);
    border: 3px solid var(--clr-border);
    border-radius: 8px;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.15);
  }

  article {
    padding: 10px 0;
  }

  h2 {
    color: var(--clr-heading);
    border-bottom: 2px solid var(--clr-border);
    padding-bottom: 5px;
  }

  p {
    margin: 10px 0;
    color: var(--clr-text);
  }

  figure {
    text-align: center;
    margin: 20px 0;
  }

  figure img {
    margin: auto;
    max-width: 100%;
    height: auto;
    border: 1px solid var(--clr-border);
    border-radius: 5px;
    background: var(--clr-main-bg);
  }

  figcaption {
    margin-top: 10px;
    font-style: italic;
    color: var(--clr-text);
    opacity: 0.85;
  }

  .center-text {
    text-align: center;
  }

  [data-theme="dark"] main {
    box-shadow: 0 0 14px rgba(0, 0, 0, 0.4);
  }
</style>

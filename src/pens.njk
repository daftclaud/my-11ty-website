    margin-top: 0;
  }
  .pen-item p {
    margin-top: 5px;
  }
  .pen-item a {
    display: inline-block;
    margin-top: 10px;
    color: #007bff;
  }

  @media (max-width: 600px) {
    .pen-item {
      flex-direction: column;
      align-items: flex-start;
    }
    .pen-item img {
      margin: 0 0 10px 0;
      max-width: 100%;
    }
    .pen-item img:hover {

  </p>

  <section class="pen-list">
    {% for post in collections.pen %}
    <article class="pen-item">
      <img src="{{ post.data.image }}" alt="{{ post.data.title }} thumbnail" />
      <div class="pen-info">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p>{{ post.data.description }}</p>
      </div>
    </article>
    {% endfor %}
  </section>
</div>

<style>
  .content img {
    max-width: 50%;
    float: left;
    margin-right: 20px;
  }
  .content {
    display: flow-root;
  }
  .pen-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid #ddd;
  }
  .pen-info {
    flex: 1;
  }
  .pen-item img {
    max-width: 100px;
    margin-right: 20px;
    border-radius: 15px;
    box-shadow: 0 0 10px #d400ff;
    transition: transform 0.3s ease;
    background: white;
  }
  .pen-item img:hover {
    transform: scale(2);
  }
  .pen-item h2 {
    margin-top: 0;
  }
  .pen-item p {
    margin-top: 5px;
  }
  .pen-item a {
    display: inline-block;
    margin-top: 10px;
    color: #007bff;
  }
</style>

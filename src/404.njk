<script>
  (function redirectWordCurationDeepLink() {
    const path = window.location.pathname || "";
    const match = path.match(/^\/(es\/)?word-curations\/(\d{4}-\d{2}-\d{2})/);
    if (!match) return;

    const prefix = match[1] || ""; // e.g., "es/" or ""
    const date = match[2];
    const target = `/${prefix}word-curations/?date=${date}`;
    window.location.replace(target);
  })();
</script>
